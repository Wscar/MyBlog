
@{
    ViewData["Title"] = "SignIn";
}
@using Bolg.Web.Models.ViewModels;
@model SignInViewModel;
<h2>SignIn</h2>
<div class="row">
    <div class="col-md-5">
        <div class="text-danger" asp-validation-summary="All"></div>
        <form method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" placeholder="用户名" />
            </div>
            <div class="form-group">
                <label asp-for="PassWord"></label>
                <input asp-for="PassWord" class="form-control" type="password" placeholder="密码" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">SignIn</button>
            </div>
        </form>
    </div>
</div>
